---
import '../main.css'
import Header from '$components/Header.astro'

const metaTitle = 'Hogar eficiente: un paso más hacia el futuro de las renovables'
const metaDescription =
	'Hoy celebramos el Día de la Energía, una fecha que va más allá de simplemente recordarnos la importancia de este recurso vital.'
const metaUrl = 'https://www.eltiempo.es/bc/hogareficiente/'
---

<!doctype html>
<html lang="es-ES">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		<meta name="robots" content="noindex,nofollow" />
		<title>{metaTitle}</title>
		<meta property="description" content={metaDescription} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={metaUrl} />
		<meta property="og:image" content={`${metaUrl}thumbnail.png`} />
		<meta property="og:title" content={metaTitle} />
		<meta property="og:description" content={metaDescription} />
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:image" content={`${metaUrl}thumbnail.png`} />
		<meta property="twitter:title" content={metaTitle} />
		<meta property="twitter:description" content={metaDescription} />
		<link rel="icon" href="/favicon.png" />
	</head>

	<body>
		<Header />
		<slot />
		<script src="../main.ts"></script>
	</body>
</html>
